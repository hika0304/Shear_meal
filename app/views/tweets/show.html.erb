<h3>Tweet詳細</h3>

<div class="tweet">
  <p><%= @tweet.body %></p>
  <p><%= @tweet.created_at %></p>
</div>

<p><strong>年代:</strong> <%= @tweet.age_group %></p>
<p><strong>性別:</strong> <%= @tweet.gender %></p>
<p><strong>体重:</strong> <%= @tweet.weight %> kg</p>
<p><strong>目的:</strong> <%= @tweet.goal %></p>

<% if user_signed_in? %>
     <% if current_user.already_liked?(@tweet) %>
        <%= button_to tweet_likes_path(id: @tweet.id, tweet_id: @tweet.id), data: { turbo_method: :delete } do %>
            <p>いいねを取り消す</p><%= @tweet.likes.count %>
            <i class="fa-regular fa-thumbs-up"></i>
        <% end %>
     <% else %>
        <%= button_to tweet_likes_path(id: @tweet.id, tweet_id: @tweet.id), data: { turbo_method: :post }  do %>
            <p>いいね</p><%= @tweet.likes.count %>
            <i class="fa-regular fa-thumbs-up"></i>
        <% end %>
     <% end %>
<% else %>
    <p>いいねの数 = </p><%= @tweet.likes.count %>
    <i class="fa-regular fa-thumbs-up"></i>
<% end %>

<%= link_to "編集する", edit_tweet_path(@tweet.id) %>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "Tweet一覧に戻る", tweets_path %>|
<%= link_to "マイページに戻る", user_path %> 